<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_content_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.oneri.ContentActivity"
    tools:showIn="@layout/activity_content">

    <ScrollView
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--Thumbnail Image & Title & Creator-->
            <LinearLayout
                android:id="@+id/upper_content_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!--Thumbnail Image-->
                <ImageView
                    android:id="@+id/content_image"
                    android:layout_width="180dp"
                    android:layout_height="220dp" />

                <!--Title & Creator-->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">

                    <!--Title-->
                    <TextView
                        android:id="@+id/content_title"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="Title"
                        android:textSize="24sp"
                        android:typeface="sans" />

                    <!--Creator-->
                    <TextView
                        android:textColor="@color/white"
                        android:id="@+id/content_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/content_title"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:text="Content" />

                </RelativeLayout>
            </LinearLayout>

            <!--Description & CommercialLink-->
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/main_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--Description-->
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/content_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description" />

                <!--Commercial Link-->
                <TextView
                    android:paddingTop="10dp"
                    android:id="@+id/content_commercialLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:text="Commercial Link" />
            </LinearLayout>

            <!--
            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/list_comments_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ListView
                    android:background="@color/grey"
                    android:id="@+id/list_comments"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingTop="2dp"
                    android:paddingBottom="2dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="10dp"
                    android:scrollbars="none"
                    android:scrollbarAlwaysDrawVerticalTrack="true"
                    android:divider="@color/grey">
                </ListView>
            </LinearLayout>
            -->

            <View
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/grey">

                <!--Comment Title-->
                <TextView
                    android:id="@+id/item_comment_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item_comment_title_comment"
                    android:textSize="@dimen/comment_dim_title_comment"
                    android:textColor="@color/white"
                    android:paddingBottom="2dp"
                    android:onClick="expandComment"/>

                <!--Separator-->
                <View
                    android:layout_below="@+id/item_comment_title"
                    android:id="@+id/item_comment_separator"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"/>

                <!--Comment-->
                <TextView
                    android:layout_below="@+id/item_comment_separator"
                    android:id="@+id/comment_comment"
                    android:text="Comment"
                    android:textSize="@dimen/comment_dim_comment"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="2dp"/>

                <!--User (name)-->
                <TextView
                    android:id="@+id/comment_user"
                    android:layout_below="@+id/comment_comment"
                    android:text="User"
                    android:textSize="@dimen/comment_dim_user"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:paddingBottom="2dp"/>

                <!--Separator-->
                <View
                    android:layout_below="@+id/comment_user"
                    android:id="@+id/item_comment_separator2"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:background="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="2dp"/>

                <!--More Comments-->
                <TextView
                    android:id="@+id/item_comment_more"
                    android:layout_below="@+id/item_comment_separator2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/item_comment_more"
                    android:textSize="@dimen/comment_dim_title_comment"
                    android:textColor="@color/white"
                    android:paddingBottom="2dp"
                    android:onClick="moreComments"/>

            </RelativeLayout>


            <!--Like Wish Dislike Buttons-->
            <LinearLayout
                android:paddingTop="20dp"
                android:id="@+id/below_content_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">

                <!--Like Button-->
                <ImageView
                    android:id="@+id/content_relation_likes"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_weight="1"
                    android:background="@drawable/likes"
                    android:onClick="saveRelation"
                    android:paddingRight="20dp" />

                <!--Convenient Separator-->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <!--Wish Button-->
                <ImageView
                    android:id="@+id/content_relation_wishes"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_weight="1"
                    android:background="@drawable/wishes"
                    android:onClick="saveRelation"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" />

                <!--Convenient Separator-->
                <View
                    android:layout_width="10dp"
                    android:layout_height="match_parent"/>

                <!--Do not like Button-->
                <ImageView
                    android:id="@+id/content_relation_do_not_like"
                    android:layout_width="@dimen/button_size"
                    android:layout_height="@dimen/button_size"
                    android:layout_weight="1"
                    android:background="@drawable/donotlike"
                    android:onClick="saveRelation"
                    android:paddingLeft="20dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>